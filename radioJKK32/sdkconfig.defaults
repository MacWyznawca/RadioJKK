# Serial flasher config
#
CONFIG_FLASHMODE_QIO=y
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_ESPTOOLPY_FLASHFREQ_80M=y

CONFIG_FREERTOS_HZ=1000

CONFIG_FREERTOS_ENABLE_BACKWARD_COMPATIBILITY=y

# Custom Audio Board
#
CONFIG_AUDIO_BOARD_CUSTOM=y

CONFIG_AI_THINKER_ESP32_A1S_ES8388_VARIANT_5=y
CONFIG_AI_THINKER_ESP32_A1S_ES8388_BUTTON_KEY_GPIO=y
CONFIG_AI_THINKER_ESP32_A1S_AUDIO_KIT_USING_SDCARD=y


CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_OFFSET=0x8000
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions_radiojkk.csv"

CONFIG_ESP_TLS_INSECURE=y
CONFIG_ESP_TLS_SKIP_SERVER_CERT_VERIFY=y

CONFIG_ESP_SYSTEM_EVENT_TASK_STACK_SIZE=3584

CONFIG_LOG_COLORS=y

# Override some defaults so BT stack is enabled and
# Classic BT is enabled
CONFIG_BT_ENABLED=y
CONFIG_BTDM_CTRL_MODE_BR_EDR_ONLY=y
CONFIG_BTDM_CONTROLLER_MODE_BR_EDR_ONLY=y
CONFIG_BTDM_CTRL_PINNED_TO_CORE_1=y
CONFIG_BLUEDROID_ENABLED=y
CONFIG_BLUEDROID_PINNED_TO_CORE_1=y
CONFIG_BLUEDROID_PINNED_TO_CORE=1
CONFIG_CLASSIC_BT_ENABLED=y
CONFIG_A2DP_ENABLE=y
CONFIG_COMPILER_OPTIMIZATION_SIZE=y
CONFIG_BT_ALLOCATION_FROM_SPIRAM_FIRST=y
CONFIG_BT_BLE_DYNAMIC_ENV_MEMORY=y


CONFIG_LV_CONF_SKIP=y
# CONFIG_LV_USE_OBSERVER=y
# CONFIG_LV_USE_SYSMON=y
